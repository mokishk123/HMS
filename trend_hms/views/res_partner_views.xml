<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Add Related Patient to Sales & Purchase / Misc group -->
    <record id="res_partner_form_inherit_hms_lab03" model="ir.ui.view">
        <field name="name">res.partner.form.inherit.hms.lab03</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <!-- Put it under Sales & Purchase tab, Misc group -->
            <xpath expr="//page[@name='sales_purchases']//group[@name='misc']" position="inside">
                <field name="related_patient_id" options="{'no_create': True}"/>
            </xpath>
            <!-- Make VAT required in the form as well -->
            <xpath expr="//field[@name='vat']" position="attributes">
                <attribute name="required">1</attribute>
            </xpath>
        </field>
    </record>


    <!-- Show Website in customers tree view -->
    <record id="res_partner_tree_inherit_hms_lab03" model="ir.ui.view">
        <field name="name">res.partner.tree.inherit.hms.lab03</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//tree" position="inside">
                <field name="website"/>
            </xpath>
        </field>
    </record>
</odoo>
