<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_hms_doctors_tree" model="ir.ui.view">
        <field name="name">hms.doctors.tree</field>
        <field name="model">hms.doctor</field>
        <field name="arch" type="xml">
            <tree string="Hms Patients">
                <field name="image" widget="image" optional="hide"/>
                <field name="first_name" optional="show"/>
                <field name="last_name" optional="show"/>
            </tree>
        </field>
    </record>

    <record id="view_hms_doctors_form" model="ir.ui.view">
        <field name="name">hms.doctors.form</field>
        <field name="model">hms.doctor</field>
        <field name="arch" type="xml">
            <form string="Hms Patients">
                <sheet>
                    <group>
                        <group>
                            <field name="image" widget="image" class="oe_avatar"/>
                        </group>
                        <group>
                            <field name="first_name"/>
                            <field name="last_name"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" groups="base.group_user"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="action_hms_doctors" model="ir.actions.act_window">
        <field name="name">Doctors</field>
        <field name="res_model">hms.doctor</field>
        <field name="view_mode">tree,form,kanban</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new Doctor
            </p>
        </field>
    </record>

</odoo>